{
  "version": "1.35.0",
  "name": "cvgenx",
  "description": "CLI tool to generate resumes and cover letters using Gemini or OpenAI.",
  "main": "dist/index.js",
  "bin": {
    "cvgenx": "bin/cvgenx.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "bin",
    "views",
    "public",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "npm run build && node dist/index.js",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run type-check && npm run format"
  },
  "keywords": [
    "resume",
    "cover",
    "letter",
    "cli",
    "gemini",
    "openai"
  ],
  "author": "Md Robiul Hassan",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.8.0",
    "better-sqlite3": "^9.4.3",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "html-docx-js": "^0.3.1",
    "html-pdf-node": "^1.0.8",
    "mammoth": "^1.7.0",
    "marked": "^12.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^4.17.21",
    "@types/html-docx-js": "^0.3.4",
    "@types/html-pdf-node": "^1.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.0.0"
  }
}
