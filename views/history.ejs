<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CVGenX Studio - History</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=DM+Sans:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body data-page="history">
    <div class="halo halo-1"></div>
    <div class="halo halo-2"></div>
    <header class="topbar">
      <div class="brand">
        <div class="logo">CV</div>
        <div>
          <p class="eyebrow">CVGenX</p>
          <p class="subtitle">AI-powered resume + cover letters</p>
        </div>
      </div>
      <nav class="nav">
        <a class="nav-btn" href="/">Generate</a>
        <a class="nav-btn" href="/settings">Settings</a>
        <a class="nav-btn active" href="/history">History</a>
      </nav>
    </header>

    <main class="layout">
      <section id="historyPage" class="panel active">
        <div class="panel-hero">
          <div>
            <p class="eyebrow">History</p>
            <h1>Past generations</h1>
            <p class="muted">Review and reuse your recent resumes and cover letters stored locally.</p>
          </div>
          <div class="badge-stack">
            <div class="pill-ghost">Local SQLite</div>
          </div>
        </div>
        <div class="card span-2">
          <div class="results-head">
            <div>
              <p class="eyebrow">Saved drafts</p>
              <h2>Recent</h2>
            </div>
          </div>
          <div class="history">
            <% if (!initialData.history || !initialData.history.length) { %>
              <p class="hint">No history yet.</p>
            <% } else { %>
              <% initialData.history.forEach(function(item){ %>
                <div class="history-item">
                  <div class="row" style="justify-content: space-between; align-items: flex-start;">
                    <div>
                      <p class="eyebrow"><%= item.type === 'coverLetter' ? 'Cover letter' : 'Resume' %></p>
                      <h3 style="margin: 4px 0;">Tailored draft</h3>
                      <p class="history-meta"><%= (item.jobDescription || '').slice(0,220) %></p>
                      <p class="hint" style="margin-top:6px;">
                        Resume source: <%= item.resumeId ? ('Stored resume #' + item.resumeId) : 'Latest cached resume' %>
                      </p>
                    </div>
                    <div class="mini-pill"><%= new Date(item.createdAt).toLocaleString() %></div>
                  </div>
                  <div class="history-output collapsed" id="hist-out-<%= item.id %>"><pre><%- item.output || '' %></pre></div>
                  <div class="history-actions">
                    <button class="ghost" type="button" data-toggle-output="hist-out-<%= item.id %>">Expand</button>
                    <button class="ghost" type="button" data-copy-text="<%= encodeURIComponent(item.output || '') %>">Copy</button>
                    <form class="download-form" action="/download" method="post" target="_blank" style="display:flex; gap:8px; flex-wrap:wrap;">
                      <input type="hidden" name="filename" value="cvgenx-<%= item.type %>">
                      <textarea name="content" hidden><%- item.output %></textarea>
                      <button class="ghost" type="submit" name="format" value="md">.md</button>
                      <button class="ghost" type="submit" name="format" value="pdf">.pdf</button>
                      <button class="ghost" type="submit" name="format" value="docx">.docx</button>
                    </form>
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </section>
    </main>
    <script src="/app.js"></script>
  </body>
</html>
